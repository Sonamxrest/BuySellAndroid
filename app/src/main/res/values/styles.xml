<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#C62828</item>
        <item name="colorPrimaryVariant">#C62828</item>
        <item name="colorOnPrimary">#283593</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#FF0000</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

    </style>
    <style name="MyMaterialTheme" parent="">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        ...
    </style>
    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorNavigationItem">@color/black</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>
    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>
</resources>